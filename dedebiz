            $query = str_replace('#@__',$dbprefix,$query);
            $query = str_replace("\'","\"",$query);
            $query = str_replace('\t\n\n',"",$query);
            $query = str_replace('\t\n',"",$query);
            @$db->exec($query);
    
            $query='';
