    $webname = "DedeBIZ本地测试开发站点";
    $adminmail = "admin@dedebiz.com";

    $fp = fopen($workDir."/install/config.cache.inc.php","r");
    $configStr2 = fread($fp,filesize($workDir."/install/config.cache.inc.php"));
