		//自动生成
		function OptimizeData($dsql)
		{
			global $cfg_dbprefix;
			$tptables = array("{$cfg_dbprefix}archives", "{$cfg_dbprefix}arctiny");
			$dsql->SetQuery("SELECT maintable,addtable FROM `#@__channeltype` ");
			$dsql->Execute();
			while ($row = $dsql->GetObject()) {
