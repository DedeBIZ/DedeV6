				if ($addtable != '' && !in_array($addtable, $tptables)) $tptables[] = $addtable;
			}
			$tptable = '';
			foreach ($tptables as $t) $tptable .= ($tptable == '' ? "`{$t}`" : ",`{$t}`");
			$dsql->ExecuteNoneQuery(" OPTIMIZE TABLE $tptable; ");
